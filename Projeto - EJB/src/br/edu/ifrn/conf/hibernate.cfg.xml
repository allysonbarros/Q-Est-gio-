<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
     <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/QEstagio</property>
        <property name="hibernate.connection.driver_class">org.hsqldb.jdbcDriver</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">postgres</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">update</property>
        
        <mapping class="br.edu.ifrn.negocio.OfertaEstagio" />
        <mapping class="br.edu.ifrn.negocio.Estagio" />
        <mapping class="br.edu.ifrn.negocio.Endereco" />
        <mapping class="br.edu.ifrn.negocio.Pessoa" />
        <mapping class="br.edu.ifrn.negocio.Usuario" />
        <mapping class="br.edu.ifrn.negocio.Empresa" />
        <mapping class="br.edu.ifrn.negocio.InstituicaoEnsino" />
        <mapping class="br.edu.ifrn.negocio.Diretoria" />
        <mapping class="br.edu.ifrn.negocio.Curso" />
        <mapping class="br.edu.ifrn.negocio.CategoriaEstagio" />
    </session-factory>
</hibernate-configuration>
